{
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "module": "NodeNext",
        "rootDir": "./",
        "baseUrl": "./",
        "outDir": "./gen/srv",
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "inlineSources": true,
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "paths": {
            "#cds-models/*": [
                "./@cds-models/*"
            ],
            "@/*": [
                "./*"
            ],
            "~/srv/*": [
                "./srv/*"
            ]
        },
        "types": [
            "jest",
            "node",
            "@cap-js/cds-types"
        ]
    },
    "exclude": [
        "node_modules",
        "gen"
    ],
    "include": [
        "./srv/**/*",
        "./test/**/*",
        "./app/**/*"
    ]
}